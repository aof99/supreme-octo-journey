<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/adb_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/choose_windows"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:checked="true"
                android:text="@string/windows"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/choose_mac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/mac"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/choose_ubuntu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/ubuntu"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/choose_fedora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/fedora"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/choose_linux"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/linux"
                android:textSize="18sp" />
        </RadioGroup>

    </LinearLayout>

</ScrollView>